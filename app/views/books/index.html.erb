<p id="notice"><%= notice %></p>

<div class='row'>
  <div class='col-sm-12'>
    <p>
      <form>
        <legend>Search</legend>
        <div class='col-xs-4'>
          <input type='text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword' >
        </div>
      </form>
    </p>
    <p class='pull-right'>
      <a href='#' id='show-form' class='btn btn-primary'>New Book Form</a>
    </p>
  </div>
</div>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class='<%= "finished" if book.finished? %>'>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.rating %></td>
        <td>
          <% book.genres.each do |genre| %>
            <%= link_to(genre.name, '#', class: 'label label-primary') %>
          <% end %>
        </td>
        <td>
          <a href="#" target="_blank">
            <%= image_from_amazon(book.amazon_id) %>
          </a>
        </td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-sm-4">
  <h2>Genres</h2>
  <ul class="list-unstyled">
    <% @genres.each do |genre| %>
      <li>
        <!-- just passing a variable called filter into the params that
        will be accessed inside the index controller-->
        <%= link_to(genre.name, books_path(filter: genre.name),
          class: 'label label-primary') %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to 'New Book', new_book_path %>
